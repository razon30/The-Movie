<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <saddam.razon.themovie.utils.MyTextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/textColor"
        android:textSize="@dimen/tab_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/textColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="Production Company"
                android:textColor="@color/textColor"
                android:textSize="@dimen/tab_text_size" />
            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/production_company"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="Budget"
                android:textColor="@color/textColor"
                android:textSize="@dimen/tab_text_size" />
            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/budget"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production Country"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/textColor"
                android:textSize="@dimen/tab_text_size" />
            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/production_country"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="Language"
                android:textColor="@color/textColor"
                android:textSize="@dimen/tab_text_size" />
            <saddam.razon.themovie.utils.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/textColor" />
    <saddam.razon.themovie.utils.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similar"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler" />

</LinearLayout>